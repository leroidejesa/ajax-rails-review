<ul>
  <% @posts.each do |post| %>

    <%= post.title %> <br>
    <%= post.content %> <br>
    <%= distance_of_time_in_words(post.created_at, Time.now) %> ago<br>
    <%= link_to post.comments.count('text', :distinct => true).to_s + " Comments", post_path(post.id) %><br>
    <% if user_admin %>hello<%= link_to "Edit", edit_post_path(post) %><%end%>
    <% if user_admin %><%= link_to "Delete", post_path(post), method: :delete %><%end%>

  <% end %>
</ul>
